{
  "hosting": {
    "site": "glddevtips",
    "public": "build",
    "headers": [
      {"source" : "**/*.@(eot|otf|ttf|ttc|woff|css|js)",
      "headers" : [
          {"key" : "Access-Control-Allow-Origin",
          "value" : "max-age=30672000"}]
      }, 
      {"source" : "**/*.@(jpg|jpeg|gif|png)",
      "headers" : [
          {"key" : "Cache-Control",
          "value" : "max-age=30672000"
          }]
      }, 
      {"source" : "404.html",
      "headers" : [
          {"key" : "Cache-Control",
          "value" : "max-age=300"
          }]
      }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 5300
    },
    "singleProjectMode": true,
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
